<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="256dp" android:background="@drawable/cornerblue"
            android:layout_centerInParent="true" android:layout_marginStart="40dp" android:layout_marginEnd="40dp">

        <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="80dp"
                android:gravity="center"
                android:padding="25dp"
                android:text="你确认是否要\n登出?"
                android:textColor="@color/white"
                android:textSize="36sp" />
        <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@color/white" android:id="@+id/imageView10"
                android:layout_height="2dp" android:layout_above="@id/li"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp" android:layout_alignParentBottom="true" android:id="@+id/li">
            <TextView
                    android:text="否"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/cancel" android:layout_weight="1"
                    android:textColor="@color/white" android:textSize="36sp" android:gravity="center"/>
            <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent" app:srcCompat="@color/white" android:id="@+id/imageView16"
            />
            <TextView
                    android:text="是"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/Yes" android:layout_weight="1"
                    android:textColor="@color/white" android:textSize="36sp" android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>