<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:text="主机，从机\n 标定完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView30" android:textSize="25sp"
            android:layout_marginTop="10dp" android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/img_ok" android:id="@+id/imageView18"
            android:layout_below="@id/textView30" android:layout_above="@id/li" android:padding="50dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp" android:layout_alignParentBottom="true" android:id="@+id/li">
        <Button
                android:text="离开"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/exit" android:layout_weight="1"
                android:background="@mipmap/btn_rectangle_short" android:textColor="@color/white"
                android:textSize="36sp"/>
        <Button
                android:text="继续标定"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/keepgoing" android:layout_weight="1"
                android:background="@mipmap/btn_rectangle_short" android:textColor="@color/white"
                android:textSize="36sp"/>
    </LinearLayout>
</RelativeLayout>