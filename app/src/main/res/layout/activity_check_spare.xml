<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.CheckSpare">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="256dp" android:layout_centerInParent="true"
            android:background="@drawable/cornerblue" android:layout_marginStart="50dp">

        <TextView
                android:text="是否有备胎?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView13"
                android:gravity="center" android:layout_marginTop="10dp" android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"
                android:textColor="@android:color/background_light" android:textSize="36sp"
                android:layout_centerInParent="true"
                android:translationY="-40dp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp" app:srcCompat="@android:color/darker_gray"
                android:id="@+id/imageView13" android:layout_above="@id/re"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp" android:layout_alignParentBottom="true" android:id="@+id/re">
            <TextView
                    android:text="否"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView14" android:layout_weight="1"
                    android:gravity="center" android:textColor="@android:color/background_light"
                    android:onClick="onclick" android:textSize="30sp"/>
            <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent" app:srcCompat="@android:color/darker_gray"
                    android:id="@+id/imageView14"/>
            <TextView
                    android:text="是"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView15" android:layout_weight="1"
                    android:gravity="center" android:onClick="onclick"
                    android:textColor="@android:color/background_light" android:textSize="30sp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>