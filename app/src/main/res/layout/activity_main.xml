<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" android:background="#005BAC" android:id="@+id/toolbar">

        <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent" app:srcCompat="@mipmap/menu" android:id="@+id/backim"
                android:onClick="onclick" android:visibility="gone"/>
        <TextView
                android:text="YUTONG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Title" android:layout_centerInParent="true"
                android:textColor="@android:color/background_light" android:textSize="25sp"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content" app:srcCompat="@mipmap/sign_out" android:id="@+id/RightTop"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/frage"
            android:background="@android:color/background_light" android:layout_below="@id/toolbar">

    </FrameLayout>
</RelativeLayout>